<mvc:View controllerName="sap.ui.toDo.controller.Main" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <App>
        <pages>
            <Page title="ToDo List App">
                <content>
                    <Panel headerText="Task Description">
                        <content>
                            <Input value="{/listItem/task}" valueLiveUpdate="true" width="15%" />
                            <Button text="Add Item" press=".onAddItem" />
                        </content>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>